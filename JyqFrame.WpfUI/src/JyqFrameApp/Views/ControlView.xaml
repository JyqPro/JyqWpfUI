                            Margin="15 10"
                            Header="标题"
                            BorderBrush="{DynamicResource SuccessBackground}">
                <StackPanel Margin="10">
                    <TextBlock Text="1. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="2. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="3. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="4. JyqUI 组合框内容"
                               Margin="0 5"/>
                </StackPanel>
            </ui:JyqGroupBox>
            <TextBlock Grid.Row="10"
                       Text="组合框"
                       Margin="15 10"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <ui:JyqGroupBox Grid.Row="11"
                            Margin="15 10"
                            Header="标题"
                            Style="{DynamicResource JyqDesignGroupBoxStyle}">
                <StackPanel Margin="10">
                    <TextBlock Text="1. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="2. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="3. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="4. JyqUI 组合框内容"
                               Margin="0 5"/>
                </StackPanel>
            </ui:JyqGroupBox>
            <TextBlock Grid.Row="12"
                       Text="不同颜色组合框"
                       Margin="15 10"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <ui:JyqGroupBox Grid.Row="13"
                            Margin="15 10"
                            Header="标题"
                            Style="{DynamicResource JyqDesignGroupBoxStyle}"
                            BorderBrush="{DynamicResource DrangerBrush}">
                <StackPanel Margin="10">
                    <TextBlock Text="1. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="2. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="3. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="4. JyqUI 组合框内容"
                               Margin="0 5"/>
                </StackPanel>
            </ui:JyqGroupBox>
            <TextBlock Grid.Row="14"
                       Text="不同颜色组合框"
                       Margin="15 10"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <ui:JyqGroupBox Grid.Row="15"
                            Margin="15 10"
                            Header="标题"
                            Style="{DynamicResource JyqDesignGroupBoxStyle}"
                            BorderBrush="{DynamicResource SuccessBackground}">
                <StackPanel Margin="10">
                    <TextBlock Text="1. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="2. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="3. JyqUI 组合框内容"
                               Margin="0 5"/>
                    <TextBlock Text="4. JyqUI 组合框内容"
                               Margin="0 5"/>
                </StackPanel>
            </ui:JyqGroupBox>
        </Grid>
    </ui:JyqScrollViewer>
</UserControl>
